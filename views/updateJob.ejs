<% include('layout', { title: 'Update Job' }) %>

<div class="update-job-container">
    <h1>Update Job Posting</h1>
    <form action="/jobs/<%= job.id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="position">Job Title</label>
            <input type="text" name="position" id="position" value="<%= job.position %>" required />
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input type="text" name="location" id="location" value="<%= job.location %>" required />
        </div>
        <div class="form-group">
            <label for="salary">Salary (in lpa)</label>
            <input type="number" name="salary" id="salary" value="<%= job.salary %>" required />
        </div>
        <div class="form-group">
            <label for="description">Job Description</label>
            <textarea name="description" id="description" required><%= job.description %></textarea>
        </div>
        <div class="form-group">
            <label for="technologies">Skills Required</label>
            <input type="text" name="technologies" id="technologies" value="<%= job.technologies.join(', ') %>" required />
        </div>
        <button type="submit">Update Job</button>
    </form>
</div>

<% include('footer') %>
