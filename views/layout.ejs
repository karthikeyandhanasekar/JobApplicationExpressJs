<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Responsive Header with Navigation</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      /* Header Section */
      header {
        background-color: #f8f9fa;
        padding: 20px 0;
      }

      header .navbar {
        padding-left: 0;
        padding-right: 0;
      }

      .navbar-nav .nav-item {
        margin-left: 20px;
      }

      .navbar-nav .nav-link {
        font-size: 1rem;
        font-weight: 500;
        color: #343a40;
        transition: all 0.3s ease;
      }

      .navbar-nav .nav-link:hover {
        color: #007bff;
        text-decoration: underline;
      }

      .navbar-toggler-icon {
        background-color: #007bff;
      }

      /* Logo and Title */
      .logo img {
        width: 50px;
        height: 50px;
        margin-right: 10px;
      }

      .logo h6 {
        font-weight: bold;
        font-size: 1.25rem;
        color: #343a40;
      }

      /* Search Bar */
      .search-bar input {
        width: 250px;
        transition: width 0.3s ease-in-out;
      }

      .search-bar input:focus {
        width: 300px;
        border-color: #007bff;
      }

      .search-bar button {
        background-color: #007bff;
        color: white;
        border: none;
        transition: all 0.3s ease;
      }

      .search-bar button:hover {
        background-color: #0056b3;
      }

      /* Footer */
      footer {
        background-color: #f8f9fa;
        padding: 20px 0;
        text-align: center;
      }

      footer p {
        margin: 0;
        font-size: 0.9rem;
        color: #6c757d;
      }

      /* Responsive Design */
      @media (max-width: 767px) {
        .logo h6 {
          font-size: 1rem;
        }

        .search-bar input {
          width: 200px;
        }
      }
    </style>
  </head>
  <body>
    <!-- Header Section -->
    <header>
      <div class="container">
        <div class="row align-items-center">
          <!-- Logo and Title Section -->
          <div
            class="col-12 col-md-2 d-flex justify-content-start align-items-center logo"
          >
            <img
              src="https://via.placeholder.com/50"
              alt="Logo"
              class="img-fluid me-2"
            />
            <h6 class="mb-0">Job Portal</h6>
          </div>

          <!-- Navigation Section -->
          <div class="col-12 col-md-5 d-flex justify-content-center">
            <nav class="navbar navbar-expand-lg navbar-light">
              <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarNav"
                aria-controls="navbarNav"
                aria-expanded="false"
                aria-label="Toggle navigation"
              >
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link active" href="/">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/jobs">Jobs</a>
                  </li>
                  <!-- Recruiter Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Recruiter
                    </a>
                    <ul class="dropdown-menu">
                      <li>
                        <a class="dropdown-item" href="/register">Register</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/login">Login</a>
                      </li>
                    </ul>
                  </li>
                  <!-- Job Seeker Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="jobSeekerDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Job Seeker
                    </a>
                    <ul
                      class="dropdown-menu"
                      aria-labelledby="jobSeekerDropdown"
                    >
                      <li><a class="dropdown-item" href="/login">Login</a></li>
                      <li>
                        <a class="dropdown-item" href="/register">Register</a>
                      </li>
                    </ul>
                  </li>
                </ul>
              </div>
            </nav>
          </div>

          <!-- Search Bar Section -->
          <div
            class="col-12 col-md d-flex justify-content-between flex-row search-bar"
          >
            <form
              class="d-flex justify-content-center justify-content-md-end"
              style="visibility: hidden"
            >
              <input
                class="form-control me-2"
                type="search"
                placeholder="Search"
                aria-label="Search"
              />
              <button class="btn btn-outline-success" type="submit">
                Search
              </button>
            </form>
            <button
              id="logoutButton"
              class="btn btn-contained-primary"
              type="button"
            >
              <%= user ? 'Logout' : 'Login' %>
            </button>
          </div>
        </div>
      </div>
    </header>

    <main>
      <%- body %>
      <!-- This is where child views will be inserted -->
    </main>

    <footer>
      <p>&copy; 2023 Job Portal. All Rights Reserved.</p>
    </footer>
    <script>
      const logoutButton = document.getElementById("logoutButton");

      logoutButton.addEventListener("click", function () {
        const actionUrl = '<%= user ? "/logout" : "/login" %>';
        window.location.href = actionUrl;
      });
    </script>
  </body>
</html>
