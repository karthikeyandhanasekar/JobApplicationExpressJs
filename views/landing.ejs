<!-- Interactive Welcome Section -->
<section class="welcome-section">
  <div class="container">
    <h2 id="greeting"></h2>
    <p id="motivational-text"></p>
    <button class="btn btn-welcome" onclick="welcomeAction()">
      Explore More
    </button>
  </div>
</section>

<!-- About Portal Section -->
<section class="about-portal">
  <div class="container">
    <h3>About Our Portal</h3>
    <p>
      Welcome to our job portal, a one-stop solution for job seekers and
      recruiters alike. Our platform connects talented individuals with top
      companies in various industries, helping you find the perfect job or
      recruit the best talent effortlessly. Whether you're looking to advance
      your career or fill critical roles in your organization, we provide the
      tools and resources to make your journey a success.
    </p>
  </div>
</section>

<!-- Script to make the greeting dynamic -->
<script>
  // Function to get the current time of day and provide a dynamic greeting
  function updateGreeting() {
    const now = new Date();
    const hour = now.getHours();
    const greetingElement = document.getElementById("greeting");
    const motivationalTextElement =
      document.getElementById("motivational-text");

    // Dynamic greeting based on the time of day
    if (hour < 12) {
      greetingElement.innerHTML = "Good Morning!";
      motivationalTextElement.innerHTML =
        "Start your day with great opportunities and new adventures!";
    } else if (hour < 18) {
      greetingElement.innerHTML = "Good Afternoon!";
      motivationalTextElement.innerHTML =
        "Keep going! Youâ€™re halfway to your goal!";
    } else {
      greetingElement.innerHTML = "Good Evening!";
      motivationalTextElement.innerHTML =
        "Relax and unwind; tomorrow is a new chance to grow!";
    }
  }

  // Placeholder action for the button click
  function welcomeAction() {
    alert("Welcome! Explore more features or check your profile.");
  }

  // Call the function to update greeting when the page loads
  window.onload = updateGreeting;
</script>

